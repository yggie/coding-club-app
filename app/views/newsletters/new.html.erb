<div class="container">
  <div class="row">
    <section class="col-xs-12 col-sm-8 col-sm-offset-2">
      <h1>Create a newsletter draft</h1>

      <p>
        <small>
          To create a draft, all we need is a date for the newsletter.
        </small>
      </p>
      <%= form_for Newsletter.new, html: { class: 'form-horizontal' } do |f| %>

        <div class="form-group">
          <%= f.label :target_date, 'Date', class: 'col-sm-3 control-label' %>
          <div class="col-sm-9">
            <%= f.date_field :target_date, class: 'form-control' %>
          </div>
        </div>

        <button type="submit" class="btn btn-default pull-right">Create</button>
      <% end %>
    </section>
  </div>
</div>
