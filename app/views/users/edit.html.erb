<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= form_for current_user, url: update_user_path do |f| %>
        <%= f.label value: :subscribed do %>
          <%= f.radio_button :subscription_preference, :subscribed %>
          Subscribed
        <% end %>

        <%= f.label value: :unsubscribed do %>
          <%= f.radio_button :subscription_preference, :unsubscribed %>
          Unsubscribed
        <% end %>

        <%= f.submit 'Update Preferences' %>
      <% end %>
    </div>
  </div>
</div>
